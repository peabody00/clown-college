<h2>Add New Activities</h2>
<br>
<%= form_with model: [@student, @activity] do |form| %>
    <%= form.collection_select :activity_id, StudentActivity.order(:name),:id,:name %>
    <% form.hidden_field :student_id, value: @student.id %>
    <%= form.submit %>
<% end %>
<%= link_to "Home", root_path %>